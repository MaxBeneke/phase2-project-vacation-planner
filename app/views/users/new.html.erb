<h1>Create a new account</h1>

<%= render "/shared/errors" %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit "Create Account"%>
<% end %>